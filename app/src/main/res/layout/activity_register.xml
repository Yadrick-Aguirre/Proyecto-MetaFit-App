<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    android:padding="20dp"
    tools:context=".RegisterActivity">

    <!-- TÍTULO -->
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingrese su información"
        android:textColor="#1E293B"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TABLE LAYOUT -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/textView7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ID CON LUPA -->
        <TableRow>

            <TextView
                android:layout_width="128dp"
                android:layout_marginEnd="16dp"
                android:text="ID"
                android:textColor="#1E293B"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:backgroundTint="#E2E8F0"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="8dp">

                <EditText
                    android:id="@+id/editTextId"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:inputType="number"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/btnSearchId"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:srcCompat="@android:drawable/ic_menu_search"
                    app:tint="#2563EB" />
            </LinearLayout>
        </TableRow>

        <!-- NOMBRE -->
        <TableRow android:layout_marginTop="12dp">
            <TextView android:text="Nombre" android:textColor="#1E293B" android:textSize="16sp" android:layout_marginEnd="16dp" />
            <EditText android:id="@+id/editTextText8" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1"
                android:backgroundTint="#E2E8F0" android:inputType="textPersonName" android:padding="12dp" android:textSize="16sp" />
        </TableRow>

        <!-- APELLIDOS -->
        <TableRow android:layout_marginTop="12dp">
            <TextView android:text="Apellidos" android:textColor="#1E293B" android:textSize="16sp" android:layout_marginEnd="16dp" />
            <EditText android:id="@+id/editTextText9" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1"
                android:backgroundTint="#E2E8F0" android:inputType="textPersonName" android:padding="12dp" android:textSize="16sp" />
        </TableRow>

        <!-- NACIONALIDAD -->
        <TableRow android:layout_marginTop="12dp">
            <TextView android:text="Nacionalidad" android:textColor="#1E293B" android:textSize="16sp" android:layout_marginEnd="16dp" />
            <EditText android:id="@+id/editTextText10" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1"
                android:backgroundTint="#E2E8F0" android:inputType="text" android:padding="12dp" android:textSize="16sp" />
        </TableRow>

        <!-- FECHA DE NACIMIENTO -->
        <TableRow android:layout_marginTop="12dp">
            <TextView
                android:text="Fecha de nacimiento"
                android:textColor="#1E293B"
                android:textSize="16sp"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:backgroundTint="#E2E8F0"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="8dp">

                <TextView
                    android:id="@+id/lbBirthdate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/btnCalendar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:srcCompat="@android:drawable/ic_menu_my_calendar"
                    app:tint="#2563EB" />
            </LinearLayout>
        </TableRow>

        <!-- GÉNERO -->
        <TableRow android:layout_marginTop="12dp">
            <TextView android:text="Género" android:textColor="#1E293B" android:textSize="16sp" android:layout_marginEnd="16dp" />
            <EditText android:id="@+id/editTextText12" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1"
                android:backgroundTint="#E2E8F0" android:inputType="text" android:padding="12dp" android:textSize="16sp" />
        </TableRow>

        <!-- PESO -->
        <TableRow android:layout_marginTop="12dp">
            <TextView android:text="Peso (kg)" android:textColor="#1E293B" android:textSize="16sp" android:layout_marginEnd="16dp" />
            <EditText android:id="@+id/editTextText13" android:layout_width="0dp" android:layout_height="48dp" android:layout_weight="1"
                android:backgroundTint="#E2E8F0" android:inputType="numberDecimal" android:padding="12dp" android:textSize="16sp" />
        </TableRow>

        <!-- FOTO -->
        <TableRow android:layout_marginTop="24dp" android:gravity="center">
            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/circle_border"
                android:src="@android:drawable/ic_menu_camera"
                app:tint="#2563EB"
                android:scaleType="centerCrop" />
        </TableRow>

        <!-- BOTÓN REGISTRAR -->
        <TableRow android:layout_marginTop="24dp" android:gravity="center"/>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>